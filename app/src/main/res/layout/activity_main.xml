<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_textview_logo"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:text="LIFO"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_division_TopBarDivision"
        app:srcCompat="@drawable/howareyou" />

    <ImageView
        android:id="@+id/main_imageview_myaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_division_TopBarDivision"
        android:src="@drawable/ic_account_white"/>

    <ImageView
        android:id="@+id/main_imageview_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/main_imageview_myaccount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_division_TopBarDivision"
        android:src="@drawable/ic_notification_white"/>

    <ImageView
        android:id="@+id/main_imageview_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toStartOf="@id/main_imageview_notification"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_division_TopBarDivision"
        android:src="@drawable/ic_search_white"/>


    <LinearLayout
        android:id="@+id/main_division_TopBarDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorDivision"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_textview_logo"></LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_division_TopBarDivision"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shadow_border"
                android:padding="10dp">

                <TextView
                    android:id="@+id/main_textview_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="실시간 인기글"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"></TextView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_conslayout_hot1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_hot">

                    <ImageView
                        android:id="@+id/main_imageview_user1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_textview_user1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="임시이름"
                        app:layout_constraintBottom_toBottomOf="@+id/main_imageview_user1"
                        app:layout_constraintStart_toEndOf="@id/main_imageview_user1"
                        app:layout_constraintTop_toTopOf="@id/main_imageview_user1" />

                    <TextView
                        android:id="@+id/main_textview_date1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp"
                        android:textColor="#868296"
                        android:text="임시날짜"
                        app:layout_constraintBottom_toBottomOf="@+id/main_imageview_user1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/main_imageview_user1" />

                    <TextView
                        android:id="@+id/main_textview_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="임시제목"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_imageview_user1" />

                    <TextView
                        android:id="@+id/main_textview_content1"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="13sp"
                        android:text="임시본문"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_textview_title1" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/main_conslayout_hot2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent="0.45"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_conslayout_hot1">

                    <ImageView
                        android:id="@+id/main_imageview_user2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_profile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/main_textview_user2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="임시이름"
                        app:layout_constraintBottom_toBottomOf="@+id/main_imageview_user2"
                        app:layout_constraintStart_toEndOf="@id/main_imageview_user2"
                        app:layout_constraintTop_toTopOf="@id/main_imageview_user2" />

                    <TextView
                        android:id="@+id/main_textview_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="16sp"
                        android:textColor="#868E96"
                        android:text="임시날짜"
                        app:layout_constraintBottom_toBottomOf="@+id/main_imageview_user2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/main_imageview_user2" />

                    <TextView
                        android:id="@+id/main_textview_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:text="임시제목"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_imageview_user2" />

                    <TextView
                        android:id="@+id/main_textview_content2"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:textSize="13sp"
                        android:text="임시본문"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/main_textview_title2" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="대범한 광고"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shadow_border"
                android:padding="10dp">

                <TextView
                    android:id="@+id/main_textview_board"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="게시판"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/main_textview_freeboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:text="자유게시판"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_board" />

                <TextView
                    android:id="@+id/main_textview_freeboard_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" 자유게시판 본문"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_textview_freeboard"
                    app:layout_constraintStart_toEndOf="@id/main_textview_freeboard"
                    app:layout_constraintTop_toTopOf="@id/main_textview_freeboard" />

                <ImageView
                    android:id="@+id/main_imageview_freeboard_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_textview_freeboard" />

                <TextView
                    android:id="@+id/main_textview_qabaord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Q&amp;A"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_freeboard" />

                <TextView
                    android:id="@+id/main_textview_qaboard_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Q&amp;A 본문"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_textview_qabaord"
                    app:layout_constraintStart_toEndOf="@id/main_textview_qabaord"
                    app:layout_constraintTop_toTopOf="@+id/main_textview_qabaord" />

                <ImageView
                    android:id="@+id/main_imageview_qaboard_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_textview_qabaord" />

                <TextView
                    android:id="@+id/main_textview_tipsboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tips"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_qabaord" />

                <TextView
                    android:id="@+id/main_textview_tipsboard_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" Tips 본문"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_textview_tipsboard"
                    app:layout_constraintStart_toEndOf="@id/main_textview_tipsboard"
                    app:layout_constraintTop_toTopOf="@+id/main_textview_tipsboard" />

                <ImageView
                    android:id="@+id/main_imageview_tipsboard_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_textview_tipsboard" />

                <TextView
                    android:id="@+id/main_textview_courseboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="진로게시판"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_tipsboard" />

                <TextView
                    android:id="@+id/main_textview_courseboard_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" 진로게시판 본문"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_textview_courseboard"
                    app:layout_constraintStart_toEndOf="@id/main_textview_courseboard"
                    app:layout_constraintTop_toTopOf="@+id/main_textview_courseboard" />

                <ImageView
                    android:id="@+id/main_imageview_courseboard_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_textview_courseboard" />

                <TextView
                    android:id="@+id/main_textview_studyboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="스터디/모임"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_courseboard" />

                <TextView
                    android:id="@+id/main_textview_studyboard_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" 스터디모임 본문"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_textview_studyboard"
                    app:layout_constraintStart_toEndOf="@id/main_textview_studyboard"
                    app:layout_constraintTop_toTopOf="@+id/main_textview_studyboard" />

                <ImageView
                    android:id="@+id/main_imageview_studyboard_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_textview_studyboard" />

                <TextView
                    android:id="@+id/main_textview_bestboard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEST 게시글"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_textview_studyboard" />

                <TextView
                    android:id="@+id/main_textview_bestboard_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text=" BEST 게시글본문"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@+id/main_textview_bestboard"
                    app:layout_constraintStart_toEndOf="@id/main_textview_bestboard"
                    app:layout_constraintTop_toTopOf="@+id/main_textview_bestboard" />

                <ImageView
                    android:id="@+id/main_imageview_bestboard_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_textview_bestboard" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="대범한 광고"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shadow_border"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/main_imageview_mypost"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_mypost"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/main_textview_mypost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="내가 쓴 글"
                    app:layout_constraintBottom_toBottomOf="@id/main_imageview_mypost"
                    app:layout_constraintStart_toEndOf="@id/main_imageview_mypost"
                    app:layout_constraintTop_toTopOf="@id/main_imageview_mypost" />

                <ImageView
                    android:id="@+id/main_imageview_mypost_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintBottom_toBottomOf="@id/main_imageview_mypost"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_imageview_mypost" />

                <ImageView
                    android:id="@+id/main_imageview_mycomment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_chat_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_imageview_mypost" />

                <TextView
                    android:id="@+id/main_textview_mycomment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="댓글 단 글"
                    app:layout_constraintBottom_toBottomOf="@id/main_imageview_mycomment"
                    app:layout_constraintStart_toEndOf="@id/main_imageview_mycomment"
                    app:layout_constraintTop_toTopOf="@id/main_imageview_mycomment" />

                <ImageView
                    android:id="@+id/main_imageview_mycomment_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintBottom_toBottomOf="@id/main_imageview_mycomment"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_imageview_mycomment" />

                <ImageView
                    android:id="@+id/main_imageview_scrap"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_bookmark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/main_imageview_mycomment" />

                <TextView
                    android:id="@+id/main_textview_scrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="스크랩"
                    app:layout_constraintBottom_toBottomOf="@id/main_imageview_scrap"
                    app:layout_constraintStart_toEndOf="@id/main_imageview_scrap"
                    app:layout_constraintTop_toTopOf="@id/main_imageview_scrap" />

                <ImageView
                    android:id="@+id/main_imageview_scrap_new"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/ic_new"
                    app:layout_constraintBottom_toBottomOf="@id/main_imageview_scrap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/main_imageview_scrap" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>